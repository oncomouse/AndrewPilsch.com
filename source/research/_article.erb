<div class="col1 expand box research article no-excerpt" id="<%= article["id"]%>">
	<div class="hideable">
		<div class="magnifier"></div>
		<h2><%= article["published"] ? "Published Article" : "Article In Progress" %></h2>
		<p><img src="<%= article["image"]%>" alt="Image Illustrating the book, \"<%= article["short_title"]%>\""/></p>
		<h3><%= article["short_title"]%></h3>
		<% if article["short_description"] %>
			<p><%= RDiscount.new(article["short_description"]).to_html %></p>
		<% end %>
	</div>
	<div class="expandable">
		<div class="mobile"><h1><%= article["published"] ? "Published Article" : "Article In Progress" %></h1></div>
		<h2><%= article["title"]%></h2>
		
		<%= RDiscount.new("**#{article["journal_information"]}**").to_html %>

		<%= RDiscount.new(article["description"]).to_html %>
	</div>
</div>