.col2.expand.box.research.article.no-excerpt{ :id => "#{book["id"]}" }
	.hideable
		.magnfier
		%h2= book["published"] ? "Published Book" : "Book In Progress"
		%p
			%img{ :src => "#{book["image"]}", :alt => "Image Illustrating the book, \"#{book["short_title"]}\"" }
		%h3= book["short_title"]
		- if book["short_description"]
			:markdown
				#{book["short_description"]}
	.expandable
		.mobile
			%h1= book["published"] ? "Published Book" : "Book In Progress" 
			%h2= book["title"]
			:markdown
				#{book["description"]}