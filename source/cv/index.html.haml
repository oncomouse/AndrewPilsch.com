---
layout: false
---
!!! 5
%html.no-js{ :lang => "en" }
	%head
		%meta{ :charset => "utf-8" }/
		
		-# Always force latest IE rendering engine (even in intranet) & Chrome Frame
		-# Remove this if you use the .htaccess
		-# %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
		
		%title Andrew Pilsch - CV
		%meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/

		/ Basic Goldilocks Approach CSS structure
		= stylesheet_link_tag("site.css", :media => "all", :rel => "stylesheet" )
		:scss
			body.cv_standalone {
				max-width: 960px;
				margin: auto;
				width: 95%;
				margin-bottom: 12rem;
			}
	%body.cv_standalone			
		.content
			#cv
				#cv_html
					.cv-preamble
						= partial "cv/preamble"

					.rendered-cv	
						= Tilt['markdown'].new(config[:markdown]) { IO.read("source/cv/_src.md").split(/^\.\.\.$/)[1] }.render(app)
	:javascript
		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-660356-1']);
		_gaq.push(['_trackPageview']);

		(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();