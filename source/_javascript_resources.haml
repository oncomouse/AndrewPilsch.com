-if place == "head"
	- javascript_include_tag("head-application.js")	
- else
	- # Next step is to remove source/javascripts/vendor and head-application.js
	= javascript_include_tag("application.js")
	:javascript	
		// Load polyfills and init isotope. All file paths are generated at build by Middleman:
		$(document).ready(function() {
	
			if (platform.os.family != "OS X") {
				$('<link rel="stylesheet" type="text/css" href="#{asset_path(:css, "fonts/liberation-sans/liberation-sans.css")}" >') .appendTo("head");
			}
			if(window.matchMedia && window.matchMedia("all and (min-width: 33.236em)").matches) {
				$LAB.queueScript("#{javascript_path("site.js")}");
			} else {
				$LAB.queueScript("#{javascript_path("mobile.js")}");
			}
	
			$LAB.queueWait(function() {
				start_isotope();
			});
			$LAB.runQueue();
			});
	- if false # This doesn't load. Old Modernizr code.
		:javascript
			$(document).ready(function() {
				Modernizr.load([
					/*{
						test: window.jQuery,
						nope: "#{javascript_path("vendor/jquery/jquery.min.js")}"
					},*/
					{
						test: Modernizr.hashchange,
						nope: "#{javascript_path 'vendor/jquery/plugins/jquery.hashchange.min.js'}"
					},
					{
						test: Modernizr.cssremunit,
						nope: "#{javascript_path("vendor/rem-unit/rem.min.js")}"
					},
					{
						test: platform.os.family != "OS X",
						yep: "#{asset_path(:css, "fonts/liberation-sans/liberation-sans.css")}"
					},
					{
						test: Modernizr.mq("all and (min-width: 33.236em)"),
						yep: "#{javascript_path("site.js")}",
						nope: "#{javascript_path("mobile.js")}",
						complete: function() {
							start_isotope();
						}
					}
				]);
			});