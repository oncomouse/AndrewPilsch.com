<% if locals[:type].nil?
	list = research
else
	list = research.select{ |item| item["type"] == type}
end

if locals[:front_page].nil?
	locals[:front_page] = false
end

list = list.select{ |item| item["front_page"] == locals[:front_page] }

list.each do |research_item| %>
	<%= partial "partials/research/print_research_item", :locals => {:item => research_item} %>
<% end %>

