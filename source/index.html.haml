- @column_width = 240
- @column_height = 240
- @column_margin = 5
- @column_border = 1
- @column_padding = 5
- @sidebar_width = 40
- @sidebar_padding = 0
- @col1 = @column_width
- @col2 = @column_width * 2 + (@column_margin + @column_border + @column_padding) * 2
- @col3 = @column_width * 3 + (@column_margin + @column_border + @column_padding) * 4
- @col4 = @column_width * 4 + (@column_margin + @column_border + @column_padding) * 6
- @colh1 = @column_height
- @colh2 = @column_height * 2 + (@column_margin + @column_border + @column_padding) * 2
- @colh3 = @column_height * 3 + (@column_margin + @column_border + @column_padding) * 4
- @colh4 = @column_height * 4 + (@column_margin + @column_border + @column_padding) * 6

- current_term = "#{CourseDate.to_term(Date.today.month)} #{Date.today.year}"
#container
	#content
		#logo
			%h1
				.andrew
					Andrew
				.pilsch
					Pilsch
		#filters
			%h1 See Content Related To:
			%ul.clearfix
				%li
					%a(href="#" data-filter="") All
				%li
					%a(href="#" data-filter=".research") Research
				%li
					%a(href="#" data-filter=".teaching") Teaching
				%li
					%a(href="#" data-filter=".design") Design
		
		#box_container
			= partial("about")
			= partial("research/print_research", :locals => { :type => "book", :front_page => true })
			= partial("teaching_philosophy")
			= partial("cv")
			= partial("find_me")
			= partial("research/print_research", :locals => { :type => "article", :front_page => true })
			= partial("podcasting")
			= partial("teaching")
			= partial("courses/print_term", :locals => { :term => current_term })
			= partial("classroom_resources")
			= partial("about_site")
			= partial("research/print_research", :locals => { :type => "presentation", :front_page => true })