%header
	#header-inner
		- if !/index.html/.match(current_page.source_file)
			%h1
				%a.home{:href=> "#{blog.options[:prefix]}"}
					%span.andrew Andrew
					%span.pilsch Pilsch
					%span.blog Blog
		-else
			%h1
				%span.andrew Andrew
				%span.pilsch Pilsch
				%span.blog Blog
		%h2
			%span.line Somewhere
			%span.line between an RT
			%span.line an Article
		%nav
			%ul
				%li.tipue_search_bar_container
					.tipue_search_bar
						%form{:method=>"get", :action=>url_for("search.html")}
							%label{:for => "q"} Input Box to Search This Blog
							%input.tipue_search_input{:type=>"text", :name => "q", :placeholder => "Search"}
				%li= link_to " ", "https://www.twitter.com/oncomouse", :class => "twitter", :title => "Andrew Pilsch on Twitter"
				%li= link_to " ", "https://www.github.com/oncomouse", :class => "github", :title => "Andrew Pilsch On GitHub"
				%li.about= link_to "About This Blog", "about.html", :title => "Click to Read About this Blog"